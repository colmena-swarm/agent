{
  scouting: {
    timeout: 3000,
    delay: 500,
    multicast: {
      enabled: true,
      address: "224.0.0.224:7446",
      interface: "auto",
      ttl: 1,
      autoconnect: { router: ["router", "peer"], peer: ["router", "peer"], client: ["router", "peer"] },
      listen: true,
    },
    gossip: {
      enabled: true,
      multihop: true,
      autoconnect: { router: ["router", "peer"], peer: ["router", "peer"], client: ["router", "peer"] },
    },
  },
  plugins: {
    storage_manager: {
      storages: {
        all: {
          key_expr: "**",
          volume: "memory"
        }
      }
    },
    rest: { http_port: 8000 }
  }
}
